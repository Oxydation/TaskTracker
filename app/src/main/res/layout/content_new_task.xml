<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mathias.apps.tasktracker.activities.NewTaskActivity"
    tools:showIn="@layout/activity_new_task">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="@string/new_task_name"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editTextTaskName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvName"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:hint="@string/new_task_hint"
        android:maxEms="10"
        android:minEms="2"
        android:maxLines="1" />

    <ImageButton
        android:id="@+id/buttonAddSubTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editTextTaskName"
        android:layout_alignRight="@+id/editTextTaskName"
        android:layout_below="@+id/editTextTaskName"
        android:src="@drawable/ic_add_white_24px"
        android:layout_marginTop="3dp" />

    <EditText
        android:id="@+id/subtaskName"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonAddSubTask"
        android:layout_alignLeft="@+id/editTextTaskName"
        android:layout_alignStart="@+id/editTextTaskName"
        android:layout_toLeftOf="@+id/buttonAddSubTask"
        android:layout_toStartOf="@+id/buttonAddSubTask"
        android:hint="Subtask Name" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="Add and Save" />

    <EditText
        android:id="@+id/editTextEstTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignLeft="@+id/subtaskName"
        android:layout_alignStart="@+id/subtaskName"
        android:layout_below="@+id/buttonAddSubTask"
        android:layout_toLeftOf="@+id/tvMinutes"
        android:ems="5"
        android:hint="Estimated Time"
        android:inputType="number" />

    <TextView
        android:id="@+id/tvMinutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editTextEstTime"
        android:layout_alignBottom="@+id/editTextEstTime"
        android:layout_alignEnd="@+id/buttonAddSubTask"
        android:layout_alignRight="@+id/buttonAddSubTask"
        android:text="Minutes"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editTextDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvMinutes"
        android:layout_alignRight="@+id/tvMinutes"
        android:layout_below="@+id/editTextEstTime"
        android:ems="10"
        android:hint="Description"
        android:inputType="textMultiLine"
        android:layout_alignLeft="@+id/editTextEstTime"
        android:layout_alignStart="@+id/editTextEstTime" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvMinutes"
        android:layout_alignBaseline="@+id/editTextEstTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Est. Time:"
        android:textSize="18sp" />

</RelativeLayout>
